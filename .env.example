# Environment variables for Docker Compose
# Copy this file to .env and modify values as needed

# Database Configuration
DB_ROOT_PASSWORD=CHANGE_ME_ROOT_PASSWORD
DB_NAME=initiate_db
DB_USER=initiate_user
DB_PASSWORD=CHANGE_ME_DB_PASSWORD

# Application Configuration
APP_ENV=production
BASE_URL=http://localhost:8082

# Security (generate strong random values for production)
SESSION_SECRET=CHANGE_ME_SESSION_SECRET_32_CHARS_MIN
CSRF_SECRET=CHANGE_ME_CSRF_SECRET_32_CHARS_MIN

# Optional: Email configuration (for future features)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=CHANGE_ME_EMAIL_PASSWORD

# Development settings (set to development for debug mode)
# APP_ENV=development
# BASE_URL=http://localhost:8082